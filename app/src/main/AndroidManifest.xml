<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.flowtrandingsystem">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:debuggable="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:targetSandboxVersion="1"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".gui.ui.ReportActivity"></activity>
        <activity
            android:name=".gui.ui.SplashActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".gui.ui.InventoryActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".gui.ui.CompanyInfoActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".gui.ui.UserInfoActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".gui.ui.ScannerActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".gui.ui.MenuActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".gui.ui.PdvActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".gui.ui.DatasheetActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".gui.ui.MainActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>