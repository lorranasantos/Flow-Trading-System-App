<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="15dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/pdv_activity_product_code"
            android:layout_width="match_parent"
            android:layout_height="0dp"

            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="30dp"
            android:hint="@string/product_code"

            android:inputType="number"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/prices_pdv_screen"
            android:layout_width="match_parent"
            android:layout_height="155dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="25dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pdv_activity_product_code">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginEnd="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/pdv_un_price"
                    style="@style/titles_pdv"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="@string/un_value" />

                <TextView
                    style="@style/pdv_prices"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="R$ 0,00" />

                <TextView
                    android:id="@+id/pdv_total_item_price"
                    style="@style/titles_pdv"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="@string/total_price" />

                <TextView
                    style="@style/pdv_prices"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="R$ 0,00" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingBottom="15dp"
                android:layout_marginStart="0dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/buy"/>

            </LinearLayout>
        </LinearLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/product_list_table"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@drawable/pdv_radius"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/prices_pdv_screen"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp">

            <LinearLayout
                android:id="@+id/product_list_pdv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/pdv_title_radius"
                android:padding="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/text_view_title_pdv"
                    style="@style/pdv_white_titles"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/product_list"
                    android:textAlignment="center"
                    android:textColor="@color/white" />
            </LinearLayout>
            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/product_list_pdv"
                app:layout_constraintStart_toStartOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="250dp">

                    <RelativeLayout
                        android:id="@+id/item_number_pdv"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:text="@string/item_number"
                            android:textAlignment="center"
                            style="@style/buy_description"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/item_code_pdv"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/item_number_pdv">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:text="@string/code"
                            android:textAlignment="center"
                            style="@style/buy_description"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/item_description_pdv"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/item_code_pdv">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:text="@string/description"
                            android:textAlignment="center"
                            style="@style/buy_description"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/item_qtde_pdv"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/item_description_pdv">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:text="@string/qtd"
                            android:textAlignment="center"
                            style="@style/buy_description"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/item_un_price_pdv"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/item_qtde_pdv">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:text="@string/un_price_abrv"
                            android:textAlignment="center"
                            style="@style/buy_description" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/item_total_price_pdv"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/item_un_price_pdv">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:text="@string/total"
                            android:textAlignment="center"
                            style="@style/buy_description"/>
                    </RelativeLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </HorizontalScrollView>



        </androidx.constraintlayout.widget.ConstraintLayout>
        <LinearLayout
            android:id="@+id/container_subtotal_desconto"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="15dp"
            app:layout_constraintTop_toBottomOf="@+id/product_list_table"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="15dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginEnd="5dp"
                android:orientation="vertical"
                android:background="@drawable/pdv_radius">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:textAlignment="center"
                    android:background="@drawable/pdv_title_radius"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/pdv_white_titles"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:text="@string/subtotal"
                        android:textAlignment="center"
                        android:textColor="@color/white" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:padding="10dp">

                    <TextView
                        style="@style/titles_pdv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="R$25,00"
                        android:textAlignment="center" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginStart="5dp"
                android:orientation="vertical"
                android:background="@drawable/pdv_radius">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:textAlignment="center"
                    android:background="@drawable/pdv_title_radius"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/pdv_white_titles"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:text="@string/discount"
                        android:textAlignment="center"
                        android:textColor="@color/white" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:padding="10dp">

                    <TextView
                        style="@style/titles_pdv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="15%"
                        android:textAlignment="center" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
        <Button
            android:id="@+id/pdv_client_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="@drawable/pdv_title_radius"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/container_subtotal_desconto"
            android:text="@string/client_register"
            android:textColor="@color/white"
            style="@style/pdv_white_titles"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>