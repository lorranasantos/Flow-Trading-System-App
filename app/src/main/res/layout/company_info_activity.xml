<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawerLayoutCompanyInfo"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/datasheet_list_title"
        android:layout_alignParentStart="true"
        android:padding="20dp"
        android:layout_alignParentEnd="true">

        <TextView
            android:id="@+id/product_name_datasheet"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="@string/app_name"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="110dp"
            style="@style/title_product_name"/>

        <TextView
            android:id="@+id/product_type_datasheet"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="50dp"
            android:text="Nome fantasia: "
            app:layout_constraintTop_toBottomOf="@+id/product_name_datasheet"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            style="@style/product_infotmation_titles"/>

        <TextView
            android:id="@+id/un_price_datasheet"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="RazÃ£o Social:"
            app:layout_constraintTop_toBottomOf="@+id/product_type_datasheet"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            style="@style/product_infotmation_titles"/>


        <TextView
            android:id="@+id/title_price_all_datasheet"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Email Comercial:"
            app:layout_constraintTop_toBottomOf="@+id/un_price_datasheet"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            style="@style/product_infotmation_titles"/>

        <TextView
            android:id="@+id/title_amount_in_inventory_datasheet"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Plano Adiquirido:"
            app:layout_constraintTop_toBottomOf="@+id/title_price_all_datasheet"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            style="@style/product_infotmation_titles"/>

        <TextView
            android:id="@+id/acquisition_date_datasheet"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Natureza de Negocios:"
            app:layout_constraintTop_toBottomOf="@+id/title_amount_in_inventory_datasheet"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            style="@style/product_infotmation_titles"/>

        <TextView
            android:id="@+id/title_expiration_date_datasheet"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Filial Atual:"
            app:layout_constraintTop_toBottomOf="@+id/acquisition_date_datasheet"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            style="@style/product_infotmation_titles"/>

        <TextView
            android:id="@+id/type_of_product_datasheet"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="45dp"
            android:layout_marginEnd="25dp"
            app:layout_constraintTop_toBottomOf="@id/product_name_datasheet"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="teste"
            style="@style/product_infotmation_titles"/>

        <TextView
            android:id="@+id/value_un_price_datasheet"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="teste"
            app:layout_constraintTop_toBottomOf="@+id/type_of_product_datasheet"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="25dp"
            style="@style/product_infotmation_titles"/>

        <TextView
            android:id="@+id/price_all_datasheet"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="teste"
            app:layout_constraintTop_toBottomOf="@+id/value_un_price_datasheet"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="25dp"
            style="@style/product_infotmation_titles"/>

        <TextView
            android:id="@+id/amount_in_inventory_datasheet"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="teste"
            app:layout_constraintTop_toBottomOf="@+id/price_all_datasheet"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="25dp"
            style="@style/product_infotmation_titles"/>

        <TextView
            android:id="@+id/price_datasheet"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="teste"
            app:layout_constraintTop_toBottomOf="@+id/amount_in_inventory_datasheet"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="25dp"
            style="@style/product_infotmation_titles"/>

        <TextView
            android:id="@+id/expiration_date_datasheet"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="teste"
            app:layout_constraintTop_toBottomOf="@+id/price_datasheet"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="25dp"
            style="@style/product_infotmation_titles"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/company_navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/nav_drawer_menu"/>

</androidx.drawerlayout.widget.DrawerLayout>