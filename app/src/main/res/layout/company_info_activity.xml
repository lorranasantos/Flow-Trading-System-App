<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawerLayoutCompanyInfo"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/datasheet_list_title"
        android:layout_alignParentStart="true"
        android:padding="20dp"
        android:layout_alignParentEnd="true">

        <TextView
            android:id="@+id/company_name"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Casa Bahia"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="110dp"
            android:textColor="@color/colorPrimaryDark"
            style="@style/title_product_name"/>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:background="@color/colorPrimaryDark"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/company_name"/>

        <TextView
            android:id="@+id/social_reason"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="50dp"
            android:text="@string/companyName"
            app:layout_constraintTop_toBottomOf="@+id/company_name"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:textColor="@color/secondary"
            style="@style/product_infotmation_titles"/>

        <TextView
            android:id="@+id/comercial_email"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="@string/companyEmail"
            app:layout_constraintTop_toBottomOf="@+id/social_reason"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:textColor="@color/secondary"
            style="@style/product_infotmation_titles"/>

        <TextView
            android:id="@+id/plan_company"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="@string/companyPlan"
            app:layout_constraintTop_toBottomOf="@+id/comercial_email"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:textColor="@color/secondary"
            style="@style/product_infotmation_titles"/>

        <TextView
            android:id="@+id/busines_company"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="@string/companyBusines"
            app:layout_constraintTop_toBottomOf="@+id/plan_company"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:textColor="@color/secondary"
            style="@style/product_infotmation_titles"/>

        <TextView
            android:id="@+id/company_branch"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="@string/comanyBranch"
            app:layout_constraintTop_toBottomOf="@+id/busines_company"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:textColor="@color/secondary"
            style="@style/product_infotmation_titles"/>

        <TextView
            android:id="@+id/name_of_company"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="45dp"
            android:layout_marginEnd="25dp"
            app:layout_constraintTop_toBottomOf="@id/company_name"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="teste"
            android:textColor="@color/secondary"

            style="@style/product_infotmation_titles"/>

        <TextView
            android:id="@+id/email_of_company"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="teste"
            app:layout_constraintTop_toBottomOf="@+id/name_of_company"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="25dp"
            android:textColor="@color/secondary"
            style="@style/product_infotmation_titles"/>

        <TextView
            android:id="@+id/plan_of_company"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="teste"
            app:layout_constraintTop_toBottomOf="@+id/email_of_company"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="25dp"
            android:textColor="@color/secondary"
            style="@style/product_infotmation_titles"/>

        <TextView
            android:id="@+id/busines_of_company"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="teste"
            app:layout_constraintTop_toBottomOf="@+id/plan_of_company"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="25dp"
            android:textColor="@color/secondary"
            style="@style/product_infotmation_titles"/>

        <TextView
            android:id="@+id/branch_of_company"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="teste"
            app:layout_constraintTop_toBottomOf="@+id/busines_of_company"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="25dp"
            android:textColor="@color/secondary"
            style="@style/product_infotmation_titles"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/company_navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/nav_drawer_menu"/>

</androidx.drawerlayout.widget.DrawerLayout>