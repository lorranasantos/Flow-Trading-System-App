<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
xmlns:app="http://schemas.android.com/apk/res-auto">

<LinearLayout
    android:id="@+id/datasheet_list_title"
    android:layout_width="match_parent"
    android:padding="20dp"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_bottom"
    android:orientation="vertical"
    android:layout_alignParentTop="true"
    android:layout_alignParentStart="true"
    android:layout_alignParentEnd="true">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/inventory"
        android:gravity="center_horizontal"
        android:layout_gravity="center_vertical"
        android:textAppearance="@style/register_title_appearence"/>

</LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/datasheet_list_title"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true">

        <ImageView
            android:id="@+id/image_product_datasheet"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@color/logoDark"/>

        <TextView
            android:id="@+id/product_name_datasheet"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="@string/app_name"
            app:layout_constraintTop_toBottomOf="@+id/image_product_datasheet"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="15dp"
            style="@style/title_product_name"/>

        <TextView
            android:id="@+id/product_type_datasheet"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:text="@string/type"
            app:layout_constraintTop_toBottomOf="@+id/product_name_datasheet"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            style="@style/product_infotmation_titles"/>

        <TextView
            android:id="@+id/un_price_datasheet"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="@string/price_un"
            app:layout_constraintTop_toBottomOf="@+id/product_type_datasheet"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            style="@style/product_infotmation_titles"/>


        <TextView
            android:id="@+id/title_price_all_datasheet"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="@string/price_all"
            app:layout_constraintTop_toBottomOf="@+id/un_price_datasheet"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            style="@style/product_infotmation_titles"/>

        <TextView
            android:id="@+id/title_amount_in_inventory_datasheet"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="@string/amount_in_inventory"
            app:layout_constraintTop_toBottomOf="@+id/title_price_all_datasheet"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            style="@style/product_infotmation_titles"/>

        <TextView
            android:id="@+id/acquisition_date_datasheet"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Dara de Aquisição"
            app:layout_constraintTop_toBottomOf="@+id/title_amount_in_inventory_datasheet"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            style="@style/product_infotmation_titles"/>

        <TextView
            android:id="@+id/title_expiration_date_datasheet"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="@string/expiration_date"
            app:layout_constraintTop_toBottomOf="@+id/acquisition_date_datasheet"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            style="@style/product_infotmation_titles"/>

        <TextView
            android:id="@+id/type_of_product_datasheet"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="25dp"
            app:layout_constraintTop_toBottomOf="@id/product_name_datasheet"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="teste"
            style="@style/product_infotmation"/>

        <TextView
            android:id="@+id/value_un_price_datasheet"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="teste"
            app:layout_constraintTop_toBottomOf="@+id/type_of_product_datasheet"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="25dp"
            style="@style/product_infotmation_titles"/>

        <TextView
            android:id="@+id/price_all_datasheet"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="teste"
            app:layout_constraintTop_toBottomOf="@+id/value_un_price_datasheet"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="25dp"
            style="@style/product_infotmation_titles"/>

        <TextView
            android:id="@+id/amount_in_inventory_datasheet"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="teste"
            app:layout_constraintTop_toBottomOf="@+id/price_all_datasheet"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="25dp"
            style="@style/product_infotmation_titles"/>

        <TextView
            android:id="@+id/price_datasheet"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="teste"
            app:layout_constraintTop_toBottomOf="@+id/amount_in_inventory_datasheet"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="25dp"
            style="@style/product_infotmation_titles"/>

        <TextView
            android:id="@+id/expiration_date_datasheet"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="teste"
            app:layout_constraintTop_toBottomOf="@+id/price_datasheet"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="25dp"
            style="@style/product_infotmation_titles"/>

    </androidx.constraintlayout.widget.ConstraintLayout>




</RelativeLayout>