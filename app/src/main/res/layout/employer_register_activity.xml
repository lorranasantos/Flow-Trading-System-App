<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/employees_register_title"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@drawable/rounded_bottom"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/employees_register"
            android:gravity="center_horizontal"
            android:layout_gravity="center"
           android:textAppearance="@style/register_title_appearence"/>
    </LinearLayout>

    <EditText
        android:id="@+id/employees_register_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:inputType="textCapWords"
        android:hint="@string/nome"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/employees_register_title"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/employees_register_cpf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:inputType="number"
        android:hint="@string/cpf"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/employees_register_name"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/employees_register_rg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:inputType="number"
        android:hint="@string/rg"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/employees_register_cpf"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/employees_register_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:inputType="textPassword"
        android:hint="@string/password"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/employees_register_rg"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/employees_register_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:background="@drawable/rounded_purple_button"
        android:text="@string/register"
        android:textAppearance="@style/buttonTextAppearence"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/employees_register_password"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@drawable/rounded_top"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/employees_register_footer"
            android:textAppearance="@style/footerAppearence"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:text="@string/app_name"
            android:gravity="center_horizontal"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>