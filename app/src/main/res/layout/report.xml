<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".gui.ui.ReportActivity">

        <LinearLayout
            android:id="@+id/sale_report"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@drawable/pdv_radius"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:orientation="vertical">

        <LinearLayout
            android:id="@+id/report_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/pdv_title_radius"
            android:padding="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/text_view_title_pdv"
                style="@style/pdv_white_titles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="RelatÃ³rio de Vendas"
                android:textAlignment="center"
                android:textColor="@color/white" />
        </LinearLayout>

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:stretchColumns="1">

                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="@string/code"
                            android:padding="5dp"
                            android:textAppearance="@style/titles_pdv"
                            android:textAlignment="center"/>
                        <TextView
                            android:text="@string/product"
                            android:padding="5dp"
                            android:textAppearance="@style/titles_pdv"
                            android:textAlignment="center"/>
                        <TextView
                            android:text="@string/description"
                            android:padding="5dp"
                            android:textAppearance="@style/titles_pdv"
                            android:textAlignment="center"/>
                        <TextView
                            android:text="@string/quantidade"
                            android:padding="5dp"
                            android:textAppearance="@style/titles_pdv"
                            android:textAlignment="center"/>
                        <TextView
                            android:text="Custo p/ item"
                            android:padding="5dp"
                            android:textAppearance="@style/titles_pdv"
                            android:textAlignment="center"/>
                        <TextView
                            android:text="@string/unit_of_measurement"
                            android:padding="5dp"
                            android:textAppearance="@style/titles_pdv"
                            android:textAlignment="center"/>
                    </TableRow>

                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/report_code"
                            android:padding="5dp"
                            android:textAppearance="@style/pdv_prices"
                            android:textAlignment="center"
                            android:text="11111"/>
                        <TextView
                            android:id="@+id/report_product"
                            android:padding="5dp"
                            android:textAlignment="center"
                            android:textAppearance="@style/pdv_prices"
                            android:text="umdoistres"/>
                        <TextView
                            android:id="@+id/report_description"
                            android:padding="5dp"
                            android:textAlignment="center"
                            android:textAppearance="@style/pdv_prices"
                            android:text="aaaaaaaaaaaaaaaaa"/>
                        <TextView
                            android:id="@+id/report_quantity"
                            android:padding="5dp"
                            android:textAlignment="center"
                            android:textAppearance="@style/pdv_prices"
                            android:text="5"/>
                        <TextView
                            android:id="@+id/report_cost_per_item"
                            android:padding="5dp"
                            android:textAlignment="center"
                            android:textAppearance="@style/pdv_prices"
                            android:text="R$25,00"/>
                        <TextView
                            android:id="@+id/report_un_of_measurement"
                            android:padding="5dp"
                            android:textAlignment="center"
                            android:textAppearance="@style/pdv_prices"
                            android:text="kg"/>
                    </TableRow>

                </TableLayout>
            </HorizontalScrollView>
        </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>

