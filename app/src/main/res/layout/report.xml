<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".gui.ui.ReportActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/sale_report"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/pdv_title_radius"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/pdv_radius"
                android:text="VENDAS"
                android:gravity="center"
                android:textSize="20dp"
                style="@style/titles_pdv"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hoje"
                android:padding="10dp"
                android:textSize="20sp"
                style="@style/white_text"/>

            <TextView
                android:id="@+id/report_sales_today"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="R$00,00"
                android:paddingStart="10dp"
                android:paddingBottom="10dp"
                style="@style/title_product_name"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Este mês"
                android:padding="10dp"
                android:textSize="20sp"
                style="@style/white_text"/>

            <TextView
                android:id="@+id/report_sales_month"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="R$00,00"
                android:paddingStart="10dp"
                android:paddingBottom="10dp"
                style="@style/title_product_name"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Clientes atendidos hoje"
                android:padding="10dp"
                android:textSize="20sp"
                style="@style/white_text"/>

            <TextView
                android:id="@+id/report_clients"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:paddingStart="10dp"
                android:paddingBottom="10dp"
                style="@style/title_product_name"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/report_bills"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/pdv_title_radius"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="30dp"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/sale_report"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/pdv_radius"
                android:text="A PAGAR"
                android:gravity="center"
                android:textSize="20dp"
                style="@style/titles_pdv"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hoje"
                android:padding="10dp"
                android:textSize="20sp"
                style="@style/white_text"/>

            <TextView
                android:id="@+id/report_bills_today"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="R$00,00"
                android:paddingStart="10dp"
                android:paddingBottom="10dp"
                style="@style/title_product_name"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Este mês"
                android:textSize="20sp"
                style="@style/white_text"/>

            <TextView
                android:id="@+id/report_bills_month"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="R$00,00"
                android:paddingStart="10dp"
                android:paddingBottom="10dp"
                style="@style/title_product_name"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/report_most_sell"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/pdv_title_radius"
            android:layout_margin="30dp"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/report_bills"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/pdv_radius"
                android:text="MAIS VENDIDOS"
                android:gravity="center"
                android:textSize="20dp"
                style="@style/titles_pdv"/>

            <TextView
                android:id="@+id/report_product_most_sell"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Coca-Cola"
                android:padding="10dp"
                android:textSize="20sp"
                style="@style/title_product_name"/>

        </LinearLayout>

        <com.anychart.AnyChartView
            android:id="@+id/pie_chart_report"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_margin="30dp"
            app:layout_constraintTop_toBottomOf="@+id/report_most_sell"
            app:layout_constraintStart_toStartOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>